@model IEnumerable<apointify.Models.Service>;

@{
    ViewData["Title"] = "Service";
}


<h1 class="text-center">
    All service providers
</h1>
<section class="wrapper">
    <div class="content">
        <div class="container">
            <div class="row">
                <form>
                @foreach (var item in Model)
                {
                    
                    <div class="col-xs-12 col-sm-4">
                        <div class="card">
                            <a class="img-card">
                                <img src="@Html.DisplayFor(modelItem => item.Img)" />
                            </a>
                            <div class="card-content">
                                <h4 class="card-title">
                                    <a>
                                        @Html.DisplayFor(modelItem => item.ServiceName)
                                    </a>
                                </h4>
                            </div>
                            <div class="card-read-more">

                                @*<input type="hidden" value="1" asp-for="@Html.DisplayNameFor(modelItem => item.ServiceId)" class="btn btn-success float-end">*@
                                <input type="submit" value="Show all" asp-controller="ServiceProvider" asp-action="Index" class="btn btn-success float-end">
                            </div>
                        </div>
                    </div>
                }
                </form>
            </div>
        </div>
    </div>
    </div>
</section>

@section Script
{
    <script>

    </script>
}