@model IEnumerable<apointify.Models.Service>;

@{
    ViewData["Title"] = "Service";
}




<div class="card bg-dark text-danger m-auto w-50">
        <h1 class="text-danger text-center">Our Services</h1>
</div>

<div class="container m-auto">
    @foreach (var item in Model)
    {
        
   
    <div class="card">
        <div class="card-image">
                <img src="@Html.DisplayFor(modelItem => item.Img)" class="img-thumbnail">
        </div>
        <div class="card-text">
            <p class="card-meal-type">Breakfast/Eggs</p>
                <h2 class="card-title">@Html.DisplayFor(modelItem => item.ServiceName)</h2>
            <p class="card-body">Eggs Benedict with hollandaise sauce, crispy bacon and an assortment of garden herbs.</p>
        </div>
        <div class="card-price">
                <a asp-controller="Service" class="text-dark" asp-action="Index" asp-route-id="@item.ServiceId">Show</a> 
            </div>
    </div>
    }
</div>



