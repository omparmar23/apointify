@model IEnumerable<apointify.Models.Employee>

@{
    ViewData["Title"] = "EmployeeTable";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EmployeeTable</h1>

@*<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>*@
<table class="col-form-label-sm table table-bordered table-hover table-responsive table-secondary table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
             <td class="d-flex justify-content-evenly flex-row">
                    <a class="btn btn-primary col-sm-4" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen"></i></a>
                    <a class="btn btn-danger col-sm-4" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
                </td> 
            </tr>
        }
    </tbody>
</table>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="card col-md-3 m-sm-5 mb-2 p-0">
                <div class="card-header">
                   <h3> @Html.DisplayFor(modelItem => item.Name)</h3>
                </div>
                <div class="card-body d-flex flex-column align-items-center">
                    <div class="col-12 d-flex flex-row">
                    <h4>
                        @Html.DisplayNameFor(model => model.Age ) :-
                    </h4>
                    <h4>
                        &nbsp;@Html.DisplayFor(modelItem => item.Age)
                    </h4>
                    </div>
                    <div class="col-12 d-flex flex-row">
                    <h4>
                        @Html.DisplayNameFor(model => model.Salary ) :-
                    </h4>
                    <h4>
                        &nbsp;@Html.DisplayFor(modelItem => item.Salary)
                    </h4>
                    </div>
                    <div class="col-12 d-flex flex-row">
                        <h4>
                            @Html.DisplayNameFor(model => model.Department ) :-
                        </h4>
                        <h4>
                            &nbsp;@Html.DisplayFor(modelItem => item.Department)
                        </h4>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <a class="btn btn-success">Book Now</a>    
                </div>
            </div>
        }
    </div>
</div>