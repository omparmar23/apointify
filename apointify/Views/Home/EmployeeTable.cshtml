@model IEnumerable<apointify.Models.Employee>

@{
    ViewData["Title"] = "EmployeeTable";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-white mb-5">EmployeeTable</h1>

@*<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>*@
<table class="col-form-label-sm table table-bordered table-hover table-responsive table-secondary table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
             <td class="d-flex justify-content-evenly flex-row">
                    <a class="btn btn-primary col-sm-4" asp-action="" asp-route-id="@item.Id" onclick="edit(@item.Id)" data-bs-toggle="modal"
                       data-bs-target="#exampleModal" ><i class="fa-solid fa-pen"></i></a>
                    @*<a class="btn btn-danger col-sm-4" asp-action="EmployeeTable" asp-route-id="" onclick="deletedata(@item.Id)"><i class="fa-solid fa-trash"></i></a>*@
                </td> 
            </tr>
        }
    </tbody>
</table>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="card col-md-3 m-sm-5 mb-2 p-0">
                <div class="card-header">
                   <h3> @Html.DisplayFor(modelItem => item.Name)</h3>
                </div>
                <div class="card-body d-flex flex-column align-items-center">
                    <div class="col-12 d-flex flex-row">
                    <h4>
                        @Html.DisplayNameFor(model => model.Age ) :-
                    </h4>
                    <h4>
                        &nbsp;@Html.DisplayFor(modelItem => item.Age)
                    </h4>
                    </div>
                    <div class="col-12 d-flex flex-row">
                    <h4>
                        @Html.DisplayNameFor(model => model.Salary ) :-
                    </h4>
                    <h4>
                        &nbsp;@Html.DisplayFor(modelItem => item.Salary)
                    </h4>
                    </div>
                    <div class="col-12 d-flex flex-row">
                        <h4>
                            @Html.DisplayNameFor(model => model.Department ) :-
                        </h4>
                        <h4>
                            &nbsp;@Html.DisplayFor(modelItem => item.Department)
                        </h4>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <a class="btn btn-success" onclick="deletedata(item.Id)">Cancel</a>
                </div>
            </div>
        }
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog bg-dark text-white">
            <div class="modal-content">
                <div class="modal-header bg-dark text-warning text-center">
                    <h5 class="modal-title" id="exampleModalLabel">UPDATE YOUR DETAILS HERE !</h5>
                </div>
                <div class="modal-body bg-dark text-white">
                    <form class="row needs-validation">
                        <div class="mb-3">
                            <input type="number" class="form-control" id="id" placeholder="0" disabled hidden>
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1">Name</label>
                            <input type="text" class="form-control" id="name" placeholder="Full Name">
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputEmail1">Age</label>
                            <input type="number" class="form-control" id="age" aria-describedby="emailHelp" placeholder="Enter Age">
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1">Salary</label>
                            <input type="number" class="form-control" id="salary" placeholder="salary">
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1">Department</label>
                            <input type="text" class="form-control" id="department" placeholder="Department">
                        </div>

                    </form>

                </div>
                <div class="modal-footer bg-dark">
                    <button type="button" class="btn btn-danger"
                            data-bs-dismiss="modal">
                        Close
                    </button>
                    <button type="submit" class="btn btn-success" id="update">Update</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Script{
    <script>    
        function deletedata(id) {
            if (confirm("Do you want to delete this entry")){

            $.ajax({
                url: "https://localhost:7248/api/DeleteEmployeeData/" + id,
                type: 'DELETE',
                success: function () {
                   alert("your data is deleted")
                }

            })
            }
        }
        
    </script>
}
               