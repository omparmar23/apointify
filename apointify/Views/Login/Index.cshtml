<!doctype html>
<html lang="en">
<head>
    <title>Login 10</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/css/style.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body class="img js-fullheight vh-100" style="background-image: url(https://img.freepik.com/free-photo/flat-lay-clean-office-desk_23-2148219267.jpg?w=1480&t=st=1681797799~exp=1681798399~hmac=88db34d536f31dd4cdae9c9e094e1fc0474e5246940a2046a9a536ea13332b48);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-end">
                <div class="col-md-12 col-lg-5">
                    <div class="card px-5 rounded-3" style="background-color:#ffffff26">
                        <div class="login-wrap p-0">
                            <h3 class=" mt-5 mb-4 text-center">Welcome To Apointify</h3>
                            <form asp-controller="Login" asp-action="ValidateCustomerLogin">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" class="form-control" placeholder="Enter Your Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="control-label"></label>
                                    <div class="input-group">
                                    <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                                    <span class="input-group-text border-0 rounded-9" style=" background: rgba(255, 255, 255, 0.08);border-top-right-radius: 50px;border-bottom-right-radius: 50px">
                                        <i class="fa fa-eye-slash icon" id="show_password"></i>
                                    </span>
                                    </div>
                                    @*<span asp-validation-for="Password" class="text-danger"></span>*@
                                </div>

                                <p class="text-danger">@ViewBag.message</p>
                                <div class="form-group">
                                    <input type="submit" value="Login"  class="btn btn-primary" />
                                </div>
                            </form>

                            <p class="w-100 text-center mb-5"><span>Don't have an account</span><a asp-controller="Login" asp-action="SignUp">Sign up</a></p>

                            <p class="w-100 text-center mb-5"><span>Don't remember Password?</span><a asp-controller="Login" asp-action="ForgotPassword">Forgot Password. </a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        $('#show_password').hover(function show() {
            //Change the attribute to text
            $('#Password').attr('type', 'text');
            $('.icon').removeClass('fa fa-eye-slash').addClass('fa fa-eye');
        },
            function () {
                //Change the attribute back to password
                $('#Password').attr('type', 'password');
                $('.icon').removeClass('fa fa-eye').addClass('fa fa-eye-slash');
            });
    </script>

</body>
</html>

