@model IEnumerable<apointify.Models.Allappointment>;
@{
    ViewData["Title"] = "appointment";
}


<div class="card bg-dark text-danger m-auto mt-5 mb-4 w-25">
    <h1 class="text-danger text-center">Your Appointments</h1>
</div>

<div class="container m-auto">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="card col-md-3 mx-3">
                <div class="card-body">
                    <p class="card-title fs-5"> FirmName : @Html.DisplayFor(modelItem =>item.FirmName) </p>
                    <p class="card-title fs-5"> AppointmentDate : @Html.DisplayFor(modelItem =>item.AppointmentDate)</p>
                    <p class="card-title fs-5"> TimeSlot :@Html.DisplayFor(modelItem => item.TimeSlot) </p>
                    <p class="card-title fs-5"> Firm Address : @Html.DisplayFor(modelItem =>item.Address,item.City) </p>
                    <p class="card-title fs-5"> Firm Contect Number: @Html.DisplayFor(modelItem =>item.MobileNumber) </p>
                    <a asp-action="Cancle" onclick="confirm()" asp-route-id="@item.AppointmentId" class="btn btn-danger">Canlce Appointment</a>
                </div>
            </div>

        }
    </div>
    
</div>


@section Script{
    <script>
        function confirm(){
            alert();
        }
    </script>
}
